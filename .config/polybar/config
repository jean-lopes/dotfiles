[theme]
normal-black   = #000000
normal-red     = #ff5555
normal-green   = #50fa7b
normal-yellow  = #f1fa8c
normal-blue    = #bd93f9
normal-magenta = #ff79c6
normal-cyan    = #8be9fd
normal-white   = #bbbbbb
bright-black   = #44475a
bright-red     = #ff5555
bright-green   = #50fa7b
bright-yellow  = #f1fa8c
bright-blue    = #bd93f9
bright-magenta = #ff79c6
bright-cyan    = #8be9fd
bright-white   = #ffffff
background     = #282a36
foreground     = #f8f8f2

[settings]
format-foreground = ${theme.foreground}
format-background = ${theme.background}
format-underline  =
format-overline   =
format-spacing    =
format-padding    =
format-margin     =
format-offset     =

[bar/mybar]
monitor = HDMI1
monitor-fallback = eDP1
font-0 = Siji:style=Regular:size=11
font-1 = IBM Plex Mono:style=Regular:size=11
font-2 = Unifont:size=11
modules-left = bspwm
modules-center = cpu memory swap filesystem
modules-right = wireless-network alsa battery date
foreground = ${theme.foreground}
background = ${theme.background}
padding = 1
module-margin-left = 1
line-size = 2
scroll-up = bspwm-desknext
scroll-down = bspwm-deskprev
border-bottom-size = 2
border-color = ${theme.normal-blue}

[module/date]
type              = internal/date
date              = %Y-%m-%d%
time              = %H:%M
format            =  <label>
format-foreground = ${theme.normal-cyan}
label             = %date% %time%

[module/alsa]
type = internal/alsa
master-soundcard = default
speaker-soundcard = default
headphone-soundcard = default
master-mixer = Master
headphone-id = 9
interval = 5
format-volume = <ramp-volume> <label-volume>
format-muted = <label-muted>
label-volume = %percentage%%
label-muted =  %percentage%%
label-muted-foreground = ${theme.normal-white}
ramp-volume-0 = 
ramp-volume-1 = 
ramp-volume-2 = 
ramp-headphones-0 = 
ramp-headphones-1 = 
format-volume-foreground = ${theme.normal-red}

[module/battery]
type = internal/battery
full-at = 99
battery = BAT0
adapter = AC
poll-interval = 3
format-discharging = <ramp-capacity> <label-discharging>
format-discharging-foreground = ${theme.normal-magenta}
label-discharging = %percentage%%
ramp-capacity-0 = 
ramp-capacity-1 = 
ramp-capacity-2 = 
ramp-capacity-3 = 
ramp-capacity-4 = 
format-charging = <label-charging>
format-charging-foreground = ${theme.normal-magenta}
label-charging =  %percentage%%
format-full-foreground = ${theme.normal-magenta}
label-full =  %percentage%%

[module/wireless-network]
type = internal/network
interface = wlp6s0
format-connected = <ramp-signal> <label-connected>
format-connected-foreground = ${theme.normal-green}
format-disconnected = <label-disconnected>
format-disconnected-foreground = ${theme.normal-green}
label-connected = %signal%%
label-disconnected = 
label-disconnected-foreground = ${theme.normal-white}
ramp-signal-0 = 
ramp-signal-1 = 
ramp-signal-2 = 
ramp-signal-3 = 
ramp-signal-4 = 
ramp-signal-5 = 

[module/bspwm]
type = internal/bspwm
format = <label-state> <label-mode>
label-separator = |
label-separator-padding = 1
label-separator-foreground = ${theme.normal-blue}
label-focused = %name%
label-focused-foreground = ${theme.normal-magenta}
label-occupied = %name%
label-occupied-foreground = ${theme.foreground}
label-urgent = %name%
label-urgent-foreground = ${theme.normal-red}
label-empty = %name%


[module/cpu]
type = internal/cpu
format = <label> <ramp-coreload>
label = CPU %percentage%%
ramp-coreload-spacing = 1
ramp-coreload-0 = ▁
ramp-coreload-1 = ▂
ramp-coreload-2 = ▃
ramp-coreload-3 = ▄
ramp-coreload-4 = ▅
ramp-coreload-5 = ▆
ramp-coreload-6 = ▇
ramp-coreload-7 = █
label-foreground = ${theme.normal-green}
ramp-coreload-foreground = ${theme.normal-green}

[module/memory]
type = internal/memory
interval = 1
format = <label>
label = RAM %percentage_used%%
label-foreground = ${theme.normal-red}

[module/swap]
type = internal/memory
interval = 1
format = <label>
label = SWP %percentage_swap_used%%
label-foreground = ${theme.normal-magenta}

[module/filesystem]
type = internal/fs
mount-0 = /
mount-1 = /home
interval = 30
fixed-values = true
spacing = 1

format-mounted = <label-mounted>
label-mounted = %mountpoint% %percentage_used%%
label-mounted-foreground = ${theme.normal-cyan}
format-unmounted = <label-unmounted>
label-unmounted = %mountpoint%: not mounted
label-unmounted-foreground = #55

